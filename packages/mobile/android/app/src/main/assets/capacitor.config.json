{
	"appId": "com.shushing.app",
	"appName": "Shushing",
	"webDir": "dist",
	"server": {
		"androidScheme": "https"
	},
	"plugins": {
		"SplashScreen": {
			"launchShowDuration": 2000,
			"backgroundColor": "#8B5CF6",
			"showSpinner": false
		},
		"StatusBar": {
			"style": "light",
			"backgroundColor": "#8B5CF6"
		}
	},
	"ios": {
		"contentInset": "automatic"
	},
	"android": {
		"allowMixedContent": false,
		"captureInput": true
	}
}
